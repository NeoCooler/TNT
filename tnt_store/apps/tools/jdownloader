vers=$1

while : 
do
	clear

	echo -e "\033[34m============================================================\033[0m"
	echo "          TNT V.$vers - by NeoCooler aka krisjanne"
	echo -e "\033[34m============================================================\033[0m"
	echo "-> JDOWNLOADER INSTALL"
	echo
	echo
	echo
	echo "     i - Install JDownloader"
	echo "     u - Update JDownloader"
	echo
	echo "     o - Open JDownloader"
	echo
	echo "     r - Remouve JDownloader"
	echo
	echo "     x - Return APPLICATIONS MENU"
	echo
	echo
	echo -e -n "\033[32m Choose option:\033[0m"
	read tntoption
	echo
	echo
	echo
	 
	case "$tntoption" in
	    i ) clear; sudo add-apt-repository ppa:jd-team/jdownloader;
	        sudo apt-get update;
	        sudo apt-get install jdownloader; clear; continue;;
	    u ) clear; sudo apt-get install jdownloader; clear; continue;;
	    o ) clear; jdownloader;clear; continue;;
	    r ) clear; sudo apt-get autoremove --purge jdownloader; clear; continue;;
	    x ) clear; exit 0;;
	    * ) echo -e "\033[31m Invalid option\033[0m";;
	esac

    script/press_enter

done

exit 0;
