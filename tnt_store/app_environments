version=$1

source script/colors
echo -e "$NORMALE"

source script/check_root

while : 
do
	clear
	echo -e "$Cyan" "============================================================" "$NORMAL"
	echo -e "     $Green_BU"" ToolsNeoTeam V.$version - by NeoCooler aka krisjanne" "$NORMAL"
	echo -e "$Cyan" "============================================================" "$NORMAL"
	echo -e "$Cyan" "->$NORMAL$White TNT Store - ENVIRONMENTS$NORMAL"
	echo -e "$Magenta"
	echo -e "     1 -$White_K Gnome.$Magenta"
	echo -e "     2 -$White_K Unity.$Magenta"
	echo -e "     3 -$White_K KDE.$Red [NEW]$Magenta"
	echo
	echo -e "     x -$White_K Return MAIN MENU$Magenta"
	echo -e "$NORMAL"
	echo -e -n "$Yellow" " Choose option:" "$White_B"
	read tntopt
	echo
	echo -e "$NORMAL"
	 
	case "$tntopt" in
		1 ) clear; tnt_store/apps/environments/gnome $version; clear; continue;;
		2 ) clear; tnt_store/apps/environments/unity $version; clear; continue;;
		3 ) clear; tnt_store/apps/environments/kde $version; clear; continue;;
		x ) clear; exit 1;;
		* ) echo -e "$Red_B" " Invalid option" "$NORMAL";;
	esac

	script/press_enter

done
